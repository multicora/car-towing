.blocking-part.main-border-bottom
  .big-indent-bottom.big-indent-top
    .row
      .long-block.font-regular
        span(ng-bind="'Welcome, ' + vm.managerName +'!'")
      .right-block
        a.btn.btn-primary.btn-block(href="http://www.reportexec.com/" target="_blank") Report Exec
    form.row.form-group.font-small(name="blocking-form"
      ng-submit="vm.block(blocking-form)")
      .left-block
        span Block towing from
      .center-block.date-range
        input.form-control(type="date"
          ng-model="vm.blockingData.dateFrom"
          required)
        span.connector to
        input.form-control(type="date"
          ng-model="vm.blockingData.dateTo"
          required)
      .right-block
        button.btn.btn-primary.btn-block(type="submit"
          ng-disabled="blocking-form.$invalid") Block
      .row.font-small
        .long-block.reason-block
          span Reason
          input.reason-input(type="text"
            ng-model="vm.blockingData.reason"
            required)
      .bloking-list-container
        .center-block.blocking-list
          p.blocking-list-title Reason
          p.blocking-list-title Date from
          p.blocking-list-title Date To
      .bloking-list-container(ng-repeat="blocking in vm.blockingDataArr")
        .center-block.blocking-list
          p.reason-list(ng-bind="blocking.reason")
          input.blocking-list-input(type="date" ng-model="blocking.from" disabled)
          input.blocking-list-input(type="date" ng-model="blocking.to" disabled)
        .right-block
          button.btn.btn-primary.btn-block.unblocking-button(type="button" ng-click="vm.unblocking(blocking._id)") Unblock