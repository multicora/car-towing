.complaint
  .popup
    .container
      header-directive(class-name="'adaptive'")
      div.row.info
        div.col-md-12
          h1 Complaint form
          h2 Leave your complaint
      div.row.page-popup
        div.col-md-12
          form.complaint-form(name="complaintForm",
            ng-submit="vm.save(complaintForm)")
            p.title Leave your complaint
            input.name(type="text",
              name="name",
              placeholder="Name",
              ng-model="vm.data.name",
              required)
            input.email(type="email",
              name="email",
              placeholder="Email",
              ng-model="vm.data.email",
              required)
            input.phone(type="text",
              name="phone",
              placeholder="Tel No",
              ng-model="vm.data.phone")
            div.radio
              label
                input.radio-button(type="radio",
                  name="radio",
                  ng-model="vm.data.type")
                span Damaged Vehicle
                input.radio-button(type="radio",
                  name="radio",
                  ng-model="vm.data.type")
                span Towed
            input.data(type="text",
              name="data",
              placeholder="When towed (data, time)",
              ng-model="vm.data.data")
            input.location(type="text",
              name="location",
              placeholder="Location",
              ng-model="vm.data.location")
            input.invoice-number(type="text",
              name="invoice-number",
              placeholder="Invoice number",
              ng-model="vm.data.invoiceNumber")
            textarea.complaint-text(name="complaint-text",
              placeholder="Complaint",
              ng-model="vm.data.complaintMessage")
            div.save
              button.btn.btn-submit.save(
                type="submit") Save