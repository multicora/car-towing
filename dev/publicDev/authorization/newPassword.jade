.new-password
  .container
    header-directive
    .new-password-container
      form.new-password-form(name="newPasswordForm",
        ng-submit="vm.newPasswordFunc()",
        novalidate)
        h5.new-password-title Password Setting
        div.new-password-content Enter new password.
        input(
          type="text",
          placeholder="Password",
          min="3",
          max="100",
          required,
          ng-model="vm.newPassword")
        input(
          type="password",
          placeholder="Confirm password",
          min="3",
          max="100",
          required,
          ng-model="vm.confirmPassword")
        p(ng-bind="vm.errorPassword")
        div
          button.new-password-button(
            type="submit") Submit
